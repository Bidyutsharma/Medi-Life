                    android:autoSizeMaxTextSize="24dp"

                    android:text="   Ace Tablet\n   paracetamol Square\n  Pharmaceuticals Ltd.\n   Unit Price: ৳ 0.80 " />





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1"


               >





                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1"

                    android:text="   Azithromycin Dihydrate\n   200 mg/5 ml Premier\n   Pharmaceuticals Ltd.\n   30 ml bottle: ৳ 120.00 "

                    android:autoSizeMaxTextSize="24dp"
                    android:drawableLeft="@drawable/azithromycin"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1"


                android:orientation="horizontal">





                <Button
                    android:id="@+id/button4"
